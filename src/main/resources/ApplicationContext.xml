<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:aaaa.properties" />

    <bean id="musicBean"
          class="rybina.course.core.ClassicalMusic">
    </bean>
    <bean id="musicPlayer"
        class="rybina.course.core.MusicPlayer">
<!--        <constructor-arg ref="musicBean"/>-->
        <property name="music" ref="musicBean" />
        <property name="volume" value="${musicPlayer.volume}" />
        <property name="musicList">
            <list>
                <bean id="classicalMusicBean" class="rybina.course.core.ClassicalMusic" />
                <bean id="rockMusicBean" class="rybina.course.core.RockMusic" />
                <bean id="indieMusicBean" class="rybina.course.core.IndieMusic" />
            </list>
        </property>
    </bean>
</beans>